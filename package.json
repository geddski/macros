{
    "name": "macros",
    "displayName": "macros",
    "description": "automate repetitive actions with custom macros",
    "version": "1.2.0",
    "publisher": "geddski",
    "repository": "https://github.com/geddski/macros",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Macros configuration",
            "properties": {
                "macros": {
                    "type": "object",
                    "description": "The root element to define macros in."
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}